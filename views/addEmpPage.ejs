<%- include('./partials/header') %>
<%- include('./partials/myNav') %>

<div class="container pt-4">
    <form method="post" action="/emp/addEmp" >
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr align="center"> <th  colspan="2">Add New Employee </th></tr>
            </thead>
            <tbody>
                <tr>
                    <td>Emp Name </td>
                    <td><input type="text" name="enm" /></td>
                </tr>

                <tr>
                    <td>Emp Password </td>
                    <td><input type="password" name="pwd" /></td>
                </tr>

                <tr>
                    <td>Email </td>
                    <td><input type="email" name="mailId" /></td>
                </tr>
                <tr>
                    <td>Date of Birth </td>
                    <td><input type="date" name="dob" /></td>
                </tr>
                <tr>
                    <td>Salary</td>
                    <td><input type="number" name="esal" /></td>
                </tr>
                <tr>                
                    <td colspan="2" align="center" ><input type="submit" name="addEmpBtn" /></td>
                </tr>
            </tbody>
        </table>
    </form>

</div>





