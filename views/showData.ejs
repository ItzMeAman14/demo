<%- include('./partials/header') %>
<%- include('./partials/myNav') %>


<hr color="navy" size="10"/>
    <h1 align="center">Show Data Page</h1>
    <hr color="navy" size="10"/>
<div class="container">
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th> Emp ID </th>
                <th> First Name </th>
                <th> Last Name </th>
                <th> Gender </th>
                <th> Email </th>
                <th> Salary </th>
            </tr>
        </thead>
        <tbody>           
            <% data.forEach((emp)=>{  %>
                <tr>
                    <td><%= emp._id %></td>
                    <td><%= emp.firstName %> </td>
                    <td><%= emp.lastName %></td>
                    <td><%= emp.gender %></td>
                    <td><%= emp.email %></td>
                    <td><%= emp.salary %></td>
                </tr>
             <% }) %> 
        
        </tbody>
    </table>
</div>   

<%- include('./partials/footer') %>